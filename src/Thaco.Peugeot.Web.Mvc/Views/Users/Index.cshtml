@using Abp.Authorization.Users
@using Thaco.Peugeot.Web.Startup
@model Thaco.Peugeot.Web.Models.Users.UserListViewModel
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
    ViewBag.CurrentPageName = PageNames.Users; // The menu item will be active for this page.
}
@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/Users/Index.js" asp-append-version="true"></script>
        <script>
            $("#user-table").dataTable({                
            });
        </script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/Users/Index.min.js" asp-append-version="true"></script>
    </environment>
}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">
                    @L("Users")
                </h3>
            </div>
            <div class="box-body">
                <button type="button" class="btn btn-primary" id="btnadd" name="btnadd" data-toggle="modal" data-target="#modal-create-user"><i class="fa fa-plus"> Add</i></button>
                <div class="box-body">
                    <table class="table table-striped table-bordered" id="user-table" style="width:100%">
                        <thead>
                            <tr>
                                <th>@L("Actions")</th>
                                <th>@L("UserName")</th>
                                <th>@L("FullName")</th>
                                <th>@L("EmailAddress")</th>
                                <th>@L("IsActive")</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Users)
                            {
                            <tr>
                                <td width="10px">
                                    <a class="btn btn-primary btn-sm edit-user" id="btnedit" name="btnedit" data-user-id="@user.Id" data-toggle="modal" data-target="#modal-edit-user"><i class="fa fa-edit fa-sm"></i></a>
                                    <a class="btn btn-primary btn-sm delete-user" id="btndelete" name="btndelete" data-user-id="@user.Id" data-user-name="@user.Name"><i class="fa fa-trash-o fa-sm"></i></a>
                                </td>
                                <td>@user.UserName</td>
                                <td>@user.FullName</td>
                                <td>@user.EmailAddress</td>
                                <td><i class="glyphicon @(user.IsActive ? "glyphicon-check" : "glyphicon-unchecked")" style="color:@(user.IsActive ? "green":"red");"></i></td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modal-create-user" tabindex="-1" role="dialog"  data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="box box-primary">
            <div class="box-header">
                <h4 class="box-title">
                    <span>@L("CreateNewUser")</span>
                </h4>
            </div>
            <div class="box-body">
                <form role="form" novalidate class="form-validation">
                    <ul class="nav nav-tabs tab-nav-right" role="tablist">
                        <li role="presentation" class="active"><a href="#create-user-details" data-toggle="tab">@L("UserDetails")</a></li>
                        <li role="presentation"><a href="#create-user-roles" data-toggle="tab">@L("UserRoles")</a></li>
                    </ul>
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane animated fadeIn active" id="create-user-details">
                            <div class="form-group">
                                <label for="InputUserName">@L("UserName")</label>
                                <input id="InputUserName" name="UserName" type="text" class="form-control form-validation" required />
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-6">
                                    <div class="form-group form-float">
                                        <div class="form-line">
                                            <label class="form-label">@L("Name")</label>
                                            <input type="text" name="Name" class="form-control" required maxlength="@AbpUserBase.MaxNameLength">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group form-float">
                                        <div class="form-line">
                                            <label class="form-label">@L("Surname")</label>
                                            <input type="text" name="Surname" class="form-control" required maxlength="@AbpUserBase.MaxSurnameLength">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-12">
                                    <div class="form-group form-float">
                                        <div class="form-line">
                                            <label class="form-label">@L("EmailAddress")</label>
                                            <input type="email" name="EmailAddress" class="form-control" required maxlength="@AbpUserBase.MaxEmailAddressLength">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-12">
                                    <div class="form-group form-float">
                                        <div class="form-line">
                                            <label class="form-label">@L("Password")</label>
                                            <input type="password" id="Password" name="Password" class="form-control" required maxlength="@AbpUserBase.MaxPlainPasswordLength">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-12">
                                    <div class="form-group form-float">
                                        <div class="form-line">
                                            <label class="form-label">@L("ConfirmPassword")</label>
                                            <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control" required maxlength="@AbpUserBase.MaxPlainPasswordLength">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-12">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" name="IsActive" value="true" id="CreateUserIsActive" class="filled-in" checked />
                                            @L("IsActive")
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div role="tabpanel" class="tab-pane animated fadeIn" id="create-user-roles">
                            <div class="row">
                                <div class="col-sm-12 ">
                                    @foreach (var role in Model.Roles)
                                    {
                                        <div class="col-sm-6">
                                            <input type="checkbox" name="role" value="@role.NormalizedName" title="@role.Description" class="filled-in" id="role-@role.Id" />
                                            <label for="role-@role.Id" title="@role.DisplayName">@role.Name</label>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">@L("Save")</button>
                        <button type="button" class="btn btn-primary" data-dismiss="modal">@L("Cancel")</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modal-edit-user" tabindex="-1" role="dialog"  data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

        </div>
    </div>
</div>
