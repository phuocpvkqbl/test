@using Abp.Authorization.Users
@using Thaco.Peugeot.Web.Startup
@model Thaco.Peugeot.Web.Models.News.NewsListViewModel
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
    ViewBag.CurrentPageName = PageNames.News; // The menu item will be active for this page.
}
@section scripts
{
<environment names="Development">
    <script src="~/view-resources/Views/News/Index.js" asp-append-version="true"></script>
    <script>
        $(function () {
            $('#news-table').DataTable({
                'paging': true,
                'lengthChange': false,
                'searching': true,
                'ordering': true,
                'info': true,
                'autoWidth': false,
                scrollX: true,
                scrollCollapse: true,
                fixedColumns: {
                    leftColumns: 1
                }
            })
            //Date picker
            $('.datepicker').datepicker({
                autoclose: true
            })
        })
    </script>
</environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/News/Index.min.js" asp-append-version="true"></script>
    </environment>
}

    <div class="row">
        <div class="col-xs-12">
            <!-- /.box -->
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Data Table With Full Features</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <button type="button" class="btn btn-primary" id="btnadd" name="btnadd" data-toggle="modal" data-target="#modal-create-news"><i class="fa fa-plus"> Add</i></button>
                    <div class="box-body">
                        <table id="news-table" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>@L("Actions")</th>
                                    <th>@L("Title")</th>
                                    <th>@L("Content")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var news in Model.News)
                                {
                                    <tr>
                                        <td width="10px">
                                            <a class="btn btn-primary btn-sm edit-news" id="btnedit" name="btnedit" data-news-id="@news.Id" data-toggle="modal" data-target="#NewsEditModal"><i class="fa fa-edit fa-sm"></i></a>
                                            <a class="btn btn-primary btn-sm delete-news" id="btndelete" name="btndelete" data-news-id="@news.Id" data-customer-name="@news.Title"><i class="fa fa-trash-o fa-sm"></i></a>
                                        </td>
                                        <td>@news.Title</td>
                                        <td>@news.Content</td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>


                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <div class="modal fade" id="modal-create-news" data-backdrop="static" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">@L("CreateNewNews")</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form role="form" class="form-validation">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="InputTitle">@L("Title")</label>
                                <input type="text" class="form-control" id="InputTitle" name="Title" required>
                            </div>
                            <div class="form-group">
                                <label for="InputContent">@L("Content")</label>
                                <textarea  class="form-control" id="InputContent" name="Content" required />
                            </div>
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">@L("Save")</button>
                            <button type="button" class="btn btn-primary" data-dismiss="modal">@L("Cancel")</button>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

    <div class="modal fade" id="NewsEditModal" tabindex="-1" role="dialog" aria-labelledby="NewsEditModalLabel" data-backdrop="static">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
            </div>
        </div>
    </div>

