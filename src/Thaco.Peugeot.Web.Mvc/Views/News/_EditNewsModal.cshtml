@using Thaco.Peugeot.Web.Models.Common.Modals
@model Thaco.Peugeot.Web.Models.News.EditNewsModalViewModel
@{
    Layout = null;
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">@L("EditNews")</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <form role="form" class="form-validation" name="NewsEditForm">
        <input type="hidden" name="Id" value="@Model.News.Id" />
        <div class="box-body">
            <div class="form-group">
                <label for="InputTitle">@L("Title")</label>
                <input type="text" class="form-control" id="InputTitle" name="Title" required value="@Model.News.Title">
            </div>
            <div class="form-group">
                <label for="InputContent">@L("Content")</label>
                <textarea class="form-control" id="InputContent" name="Content" required >@Model.News.Content</textarea>
            </div>
        </div>
        <!-- /.box-body -->
        @Html.Partial("~/Views/Shared/Modals/_BoxFooterWithSaveAndCancel.cshtml")
    </form>
</div>
<script src="~/view-resources/Views/News/_EditNewsModal.js" asp-append-version="true"></script>
