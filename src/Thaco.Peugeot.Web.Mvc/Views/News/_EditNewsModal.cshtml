@using Thaco.Peugeot.Web.Models.Common.Modals
@model Thaco.Peugeot.Web.Models.News.EditNewsModalViewModel
@{
    Layout = null;
}
@Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditNews")))

<div class="modal-body">
    <form name="NewsEditForm" role="form" novalidate class="form-validation">
        <input type="hidden" name="Id" value="@Model.News.Id" />

        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="title" type="text" name="Title" value="@Model.News.Title" required maxlength="32" minlength="2" class="validate form-control">
                        <label for="title" class="form-label">@L("Title")</label>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <textarea id="news-content" name="Content" class="validate form-control">@Model.News.Content</textarea>
                        <label for="news-content" class="form-label">@L("Content")</label>
                    </div>
                </div>
            </div>
        </div>

    </form>
</div>

@Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
<script src="~/view-resources/Views/News/_EditNewsModal.js" asp-append-version="true"></script>
