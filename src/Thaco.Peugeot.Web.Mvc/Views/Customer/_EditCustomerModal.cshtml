@using Thaco.Peugeot.Web.Models.Common.Modals
@model Thaco.Peugeot.Web.Models.Customer.EditCustomerModalViewModel
@{
    Layout = null;
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">@L("CreateNewCustomer")</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <form role="form" class="form-validation" name="CustomerEditForm">
        <input type="hidden" name="Id" value="@Model.Customer.Id" />
        <div class="box-body">
            <div class="form-group">
                <label for="InputFirstName">@L("FirstName")</label>
                <input type="text" class="form-control" id="InputFirstname" name="FirstName" required value="@Model.Customer.FirstName">
            </div>
            <div class="form-group">
                <label for="lastName">@L("LastName")</label>
                <input id="lastName" type="text" name="LastName" class="validate form-control" required value="@Model.Customer.LastName">
            </div>
            <div class="form-group">
                <label>@L("Birthday")</label>
                <div class="input-group date">
                    <div class="input-group-addon">
                        <i class="fa fa-calendar"></i>
                    </div>
                    <input type="text" class="form-control pull-right datepicker" id="birthday" name="Birthday" value="@Model.Customer.Birthday">
                </div>
            </div>
            <div class="form-group">
                <label for="identityNumber">@L("IdentityNumber")</label>
                <input id="identityNumber" type="number" name="IdentityNumber" class="validate form-control" value="@Model.Customer.IdentityId">
            </div>
            <div class="form-group">
                <label for="phoneNumber">@L("PhoneNumber")</label>
                <input id="phoneNumber" type="number" name="MobileNumber" class="validate form-control" value="@Model.Customer.MobileNumber">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">@L("Email")</label>
                <input type="email" class="form-control" id="exampleInputEmail1" name="Email" value="@Model.Customer.Email">
            </div>
            <div class="form-group">
                <label for="address" class="form-label">@L("Address")</label>
                <input id="address" type="text" name="Address" class="validate form-control" value="@Model.Customer.Address">
            </div>
            <div class="form-group">
                <label for="taxCode">@L("TaxCode")</label>
                <input id="taxCode" type="text" name="TaxCode" class="validate form-control" value="@Model.Customer.TaxCode">
            </div>
            <div class="form-group">
                <label for="website">@L("Website")</label>
                <input id="website" type="text" name="Website" class="validate form-control" value="@Model.Customer.Website">
            </div>
        </div>
        <!-- /.box-body -->
        @Html.Partial("~/Views/Shared/Modals/_BoxFooterWithSaveAndCancel.cshtml")
    </form>
</div>

<script src="~/view-resources/Views/Customer/_EditCustomerModal.js" asp-append-version="true"></script>
